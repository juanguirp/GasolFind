<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageContent"
            android:adjustViewBounds="true"
            android:src="@drawable/gas_station_black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:hint="titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tittle"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/text"/>
                <TextView
                    android:hint="info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/info"
                    android:textSize="10dp"
                    android:textColor="@color/text"/>
                <TextView
                    android:hint="Precio:Gasolina Corriente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceRG"
                    android:textSize="10dp"
                    android:textColor="@color/text"/>
                <TextView
                    android:hint="Precio:Gas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceGas"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/text"/>
                <TextView
                    android:hint="Precio:Gasolina Premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceP"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/text"/>
                <TextView
                    android:hint="Precio:ACPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceAcpm"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/text"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>